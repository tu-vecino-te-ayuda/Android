<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.tuvecinoteayuda.request_detail.RequestDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:overScrollMode="never"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="org.tuvecinoteayuda.request_detail.RequestDetailFragment">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            style="@style/H2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:text="@{vm.helpRequest.helpRequestType.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Compra de comida" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/subtitle"
            style="@style/H3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@{vm.helpRequest.message}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Esto es un comentario de ayuda" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/state"
            style="@style/H4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="@dimen/spacing_large"
            android:text="@{vm.state.name}"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@id/city"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            tools:text="22/12/1992 13:00" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/city"
            style="@style/H4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:drawableStart="@drawable/ic_city"
            android:drawablePadding="@dimen/spacing_large"
            android:text="@{vm.city.name}"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/state"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            tools:text="Burgos" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/address"
            style="@style/H4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:drawableStart="@drawable/ic_home"
            android:drawablePadding="@dimen/spacing_large"
            android:text="@{vm.helpRequest.createdAt}"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/state"
            tools:text="22/12/1992 13:00" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/date"
            style="@style/H4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="@dimen/spacing_large"
            android:text="@{vm.helpRequest.createdAt}"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address"
            tools:text="22/12/1992 13:00" />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/accept_request_button"
            style="@style/FloatingButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:contentDescription="@string/dashboard_new_request"
            android:text="@string/request_detail_i_help_you"
            app:icon="@drawable/ic_help"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>